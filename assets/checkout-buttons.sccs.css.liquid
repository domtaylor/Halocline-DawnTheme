.dynamic-checkout--btns {
  padding-bottom: 0;

  .shopify-payment-button__button {
    &>.shopify-cleanslate {
      &>* {
        display: none !important;
      }

      &>div[data-testid="ApplePay-button"],
      &>div[data-testid="GooglePay-button"] {
        display: block !important;
        padding-bottom: 5px;
        padding-left: 0;
      }
    }
  }
}
